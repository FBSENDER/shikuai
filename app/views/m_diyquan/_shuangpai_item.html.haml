- progress = (60..98).to_a.sample
- buy_url = "/buy/#{coupon["item_id"]}/?activity_id=#{coupon['url'].match(/activityId=(\w*)/)[1]}"
%a{href: "#{buy_url}", target: "_blank"}
  .product-item-t2
    .pic.lazy{data: {original: "#{coupon['thumbnail_pic']}"}}
    %p.title
      - if coupon["post_free"] == 1
        %span.post-free 包邮
      #{coupon["title"]}
    .progress-area
      %p.pro-text 已领#{progress}%
      .pro-container
        .pro{data: {pro: "#{progress / 100.0}"}, style: "width:#{progress}%"}
    .price-area
      %p.gap-price
        %em.number-font #{coupon['gap_price']}
        %span> 元券
      .price
        %span> 券后价￥
        %em.number-font #{coupon['coupon_price']}

