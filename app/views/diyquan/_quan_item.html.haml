- aaid = coupon['url'].match(/activityId=(\w*)/)
- aaid = aaid.nil? ? '' : aaid[1]
- buy_url = "/buy/#{coupon["item_id"]}/?activity_id=#{aaid}"
.zk-item
  .img-area
    %a{href: "/youhui/#{coupon['coupon_id']}/", title: "#{coupon['title']}", target: "_blank"}
      .lq
        .lq-t
          .lq-t-d1 领优惠券
          .lq-t-d2 
            省
            %span #{coupon['gap_price']}
            元
        .lq-b
      %img.lazy{src: "", alt: "#{coupon['title']}#{coupon['gap_price']}元优惠券", data: {original: "#{coupon['thumbnail_pic']}"}, style: "opacity: 1;"}

  %p.title-area.elli
    - if coupon['post_free'] == 1
      %span.post-free 包邮
    #{coupon['title']}
  .raw-price-area
    现价 ￥#{coupon['raw_price']}
    %p.sold 已领 #{coupon['month_sales']} 张券
  .info
    .price-area
      %span.price 
        %span>￥
        %em.number-font #{coupon['coupon_price'].to_i}
        %em.decimal> .#{coupon['coupon_price'].to_s.sub(/\d+\./,'')}
        %i
    .buy-area
      %a{href: "#{buy_url}", target: "_blank"}
        %span.coupon-amount 去天猫
        %span.btn-title 火速领券
    .platform-area
      - if coupon["platform_id"] == 2
        %img{src: "http://7xlxny.com1.z0.glb.clouddn.com/zhekou/web/platform_tmall.png"}
        天猫
      - else 
        %img{src: "http://7xlxny.com1.z0.glb.clouddn.com/zhekou/web/platform_taobao.png"}
        淘宝
